@model IEnumerable<GCCafe.Domain.Models.Item>

@{
    ViewBag.Title = "Index";
}



<div class="container-fluid text-center">
    <h1 class="my-5">GC Cafe Store</h1>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm-8 offset-2">
                <div class="card">
                    <div class="card-header">
                        <h2>
                            @Html.DisplayFor(modelItem => item.Name)
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title">@Html.DisplayNameFor(model => model.Price) : @Html.DisplayFor(modelItem => item.Price) | @Html.DisplayNameFor(model => model.Quantity) : @Html.DisplayFor(modelItem => item.Quantity)</h5>
                                <p class="card-text">
                                    Random description about this item :

                                </p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                <a href="#" class="btn btn-dark">Add To Cart</a>
                            </div>

                            <div class="col-sm-4">
                                <img src="~/Content/regular.jpg" class="img-thumbnail" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    }
</div>


